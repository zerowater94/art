CREATE TABLE `tco_option` (
	`SITE_ID` VARCHAR(10) NOT NULL COMMENT 'SITE ID',
	`COMP_ID` VARCHAR(10) NOT NULL COMMENT '회사ID',
	`CATEGORY` VARCHAR(30) NOT NULL COMMENT '옵션Category',
	`OPTION_ID` VARCHAR(30) NOT NULL COMMENT '옵션ID',
	`OPTION_CODE` VARCHAR(100) NULL DEFAULT NULL COMMENT '옵션 CODE',
	`OPTION_VALUE` VARCHAR(200) NULL DEFAULT NULL COMMENT '옵션값',
	`OPTION_BUILDER` VARCHAR(2000) NULL DEFAULT NULL COMMENT '생성스크립트',
	`USE_YN` CHAR(1) NULL DEFAULT NULL COMMENT '사용여부',
	`DESCRIPTION` VARCHAR(2000) NULL DEFAULT NULL COMMENT '설명',
	`REG_USER_ID` VARCHAR(30) NOT NULL COMMENT '등록자아이디',
	`REG_DTM` DATETIME NOT NULL COMMENT '등록일',
	`UPD_USER_ID` VARCHAR(30) NOT NULL COMMENT '수정자아이디',
	`UPD_DTM` DATETIME NOT NULL COMMENT '수정일',
	PRIMARY KEY (`SITE_ID`, `COMP_ID`, `OPTION_ID`),
	UNIQUE INDEX `TCO_OPTION_PK` (`SITE_ID`, `COMP_ID`, `OPTION_ID`)
)
COMMENT='공통옵션'
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;


CREATE TABLE `tco_code` (
	`SITE_ID` VARCHAR(10) NOT NULL COMMENT 'SITE ID',
	`COMP_ID` VARCHAR(10) NOT NULL COMMENT '회사ID',
	`CODE_GROUP` VARCHAR(30) NOT NULL COMMENT '코드 그룹',
	`CODE_ID` VARCHAR(30) NOT NULL COMMENT '코드ID',
	`CODE` VARCHAR(100) NULL DEFAULT NULL COMMENT 'CODE',
	`CODE_VALUE` VARCHAR(200) NULL DEFAULT NULL COMMENT 'CODE 값',
	`USE_YN` CHAR(1) NULL DEFAULT NULL COMMENT '사용여부',
	`ETC_INFO` VARCHAR(500) NULL DEFAULT NULL COMMENT '기타 정보',
	`DESCRIPTION` VARCHAR(2000) NULL DEFAULT NULL COMMENT '설명',
	`REG_USER_ID` VARCHAR(30) NOT NULL COMMENT '등록자아이디',
	`REG_DTM` DATETIME NOT NULL COMMENT '등록일',
	`UPD_USER_ID` VARCHAR(30) NOT NULL COMMENT '수정자아이디',
	`UPD_DTM` DATETIME NOT NULL COMMENT '수정일',
	PRIMARY KEY (`SITE_ID`, `COMP_ID`, `CODE_ID`),
	UNIQUE INDEX `TCO_CODE_PK` (`SITE_ID`, `COMP_ID`, `CODE_ID`)
)
COMMENT='공통코드'
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;

