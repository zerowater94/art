CREATE TABLE `tco_option` (
	`SITE_ID` VARCHAR(10) NOT NULL COMMENT 'TENANT_ID',
	`COMP_ID` VARCHAR(10) NOT NULL COMMENT '회사ID',
	`CATEGORY` VARCHAR(30) NOT NULL COMMENT '옵션Category',
	`OPTION_ID` VARCHAR(30) NOT NULL COMMENT '옵션ID',
	`OPTION_CODE` VARCHAR(100) NULL DEFAULT NULL,
	`OPTION_VALUE` VARCHAR(200) NULL DEFAULT NULL COMMENT '옵션값',
	`OPTION_BUILDER` VARCHAR(2000) NULL DEFAULT NULL COMMENT '생성스크립트',
	`USE_YN` CHAR(1) NULL DEFAULT NULL COMMENT '사용여부',
	`DESCRIPTION` VARCHAR(2000) NULL DEFAULT NULL COMMENT '설명',
	PRIMARY KEY (`SITE_ID`, `COMP_ID`, `OPTION_ID`),
	UNIQUE INDEX `TAP_APP_OPTION_PK` (`SITE_ID`, `COMP_ID`, `OPTION_ID`)
)
COMMENT='공통옵션'
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
